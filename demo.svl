property PROPERTY_safety_z1
	"WSSENDPRICE requires WSCHECKPRICE"
is
	"WealthSimple.bcg"
    |= with evaluator4
	library standard.mcl end_library
	NEVER({WSSENDPRICE ...}.{WSCHECKPRICE ...});
	expected TRUE;
end property


property PROPERTY_safety_z2
